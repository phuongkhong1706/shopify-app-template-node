{% comment %}
  This app block renders product metafields data on the product page.
  You can customize the HTML and Liquid to match your theme's design.
{% endcomment %}

{% assign product_id = product.id %}
{% assign product_comment_metafield = product.metafields.custom.comment %}

{% if product_comment_metafield != blank %}
  <style>
    .product-comment-card {
      border: 1px solid #e0e0e0;
      padding: 1.5rem;
      margin-top: 2rem;
      background-color: #f9f9f9;
      border-radius: 8px;
    }
    .product-comment-card h3 {
      margin-top: 0;
      margin-bottom: 1rem;
      font-size: 1.25rem;
      color: #333;
    }
    .product-comment-card p {
      color: #555;
      line-height: 1.6;
    }
  </style>

  <div class="product-comment-card">
    <h3>Product Comment</h3>
    <p>{{ product_comment_metafield }}</p>
  </div>
{% endif %}

{% schema %}
{
  "name": "Metafield Display",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Custom Product Info"
    }
  ]
}
{% endschema %}
